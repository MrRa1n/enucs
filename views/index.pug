extends layout

block content 
    .main-card
        .main-card-content 
            h1 We've got some awesome events lined up
            br
            a.btn(href='/events') Find out more
    
    h2.social-feed-title Twitter
    div(style='display: flex;justify-content:space-between;')
        if tweets
            each t, i in tweets
                .twitter-card
                    span#handle(style='font-size: 16px;text-transform: uppercase;color: #555;')= t.handle
                    i(class='fab fa-twitter' style='float:right;color:#1da1f2;')
                    p.tweetBody(style='padding: 10px 0;')= t.body
                    p(style='')= t.created_at

    h2.upcoming-event-title Upcoming events
    .event-container
        if !events
            p Check back soon for more upcoming events
        else
            each event, i in events
                if i < 3
                    .event-card
                        a(href='#')
                            img(src='/images/events/' + event.image, alt= event.title + ' image')
                            .event-card-info
                                h2= event.title
                                p.event-date= event.date
                                p.event-time #{event.start} - #{event.end}
                                p.event-location= event.location
            