extends layout

block content
    .body-text
        h1= title
        br
        form(method='POST', action='/users/register')
            .form-group
                label(for='name') Name:
                br
                input.form-control(id='name', name='name', type='text')
            .form-group
                label(for='email') Email:
                br
                input.form-control(id='email', name='email', type='text')
            .form-group
                label(for='password') Password:
                br
                input.form-control(id='password', name='password', type='password')
            .form-group
                label(for='password2') Confirm Password:
                br
                input.form-control(id='password2', name='password2', type='password')
            br
            input.btn.btn-default(type='submit', value='Register')
