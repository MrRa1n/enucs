extends layout

block content
    h1= title
    br
    form(method='POST', action='/events/add')
        #form-group
            label Title:
            br
            input.form-control(name='title', type='text')
        #form-group
            label Date:
            br
            input.form-control(name='date', type='date')
        #form-group
            label Location:
            br
            input.form-control(name='location', type='text')
        #form-group
            label Event description:
            br
            textarea.form-control(name='description', type='text')
        #form-group
            label Event image upload:
            br
            input.form-control(name='image', type='file')
        input.btn.btn-default(type="submit", value="Add event")