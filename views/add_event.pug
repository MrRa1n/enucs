extends layout

block extraHead
    link(rel='stylesheet' href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')
    script(src='https://code.jquery.com/jquery-3.4.1.min.js',
        integrity='sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=',
        crossorigin='anonymous')
    script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.min.js',
        integrity='sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=',
        crossorigin='anonymous')

block content
    .body-text
        h1= title
        br
        form(method='POST', action='/events/add', enctype='multipart/form-data')
            .form-group
                label(for='title') Title:
                br
                input.form-control(id='title', name='title', type='text')
            .form-group
                label(for='location') Location:
                br
                input.form-control(id='location', name='location', type='text', placeholder='e.g. C28, Merchiston')
            .form-group
                label(for='date') Date:
                br
                input.form-control(id='date', name='date', type='text', id='datepicker')
                script.
                    $('#datepicker').datepicker({
                        dateFormat: 'yy-mm-dd'
                    });
            .form-group.event-time.start
                label(for='startTime') Start:
                br
                input.form-control(id='startTime', name='start', type='text', placeholder='e.g. 17:00')
            .form-group.event-time
                label(for='endTime') End:
                br
                input.form-control(id='endTime', name='end', type='text', placeholder='e.g. 18:00')
            .form-group
                label(for='description') Event description:
                br
                textarea.form-control(id='description', name='description', type='text')
            .form-group
                label(for='imageUpload') Event image upload:
                br
                input.form-control(id='imageUpload', name='image', type='file', id='image')
            input.btn.btn-default(type='submit', value='Add event')