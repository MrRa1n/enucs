extends layout

block content
    .heading-card.events
        .heading-card-content 
            h1 Events
    
    h2 Upcoming events
    br
    .event-container
        each event, i in events
            .event-card
                a(href="#")
                    img(src='/images/file.png', alt="", srcset="")
                    .event-card-info
                        h2= event.title
                        p.event-date= event.date
                        p.event-time #{event.start} - #{event.end}
                        p.event-location= event.location
        